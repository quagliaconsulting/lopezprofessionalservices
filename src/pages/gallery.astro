---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Gallery - Lopez Professional Services">
    <!-- Gallery -->
    <section class="gallery p-8 relative" style="background-image: url('https://source.unsplash.com/random/1600x900?gallery'); background-size: cover; background-position: center;">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-3xl font-bold mb-6 text-white">Project Photos</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="https://source.unsplash.com/random/1600x900?before" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?before" alt="Before project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
                <a href="https://source.unsplash.com/random/1600x900?after" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?after" alt="After project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
                <a href="https://source.unsplash.com/random/1600x900?transformation" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?transformation" alt="Transformation project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
                <a href="https://source.unsplash.com/random/1600x900?house" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?house" alt="House project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
                <a href="https://source.unsplash.com/random/1600x900?interior" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?interior" alt="Interior project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
                <a href="https://source.unsplash.com/random/1600x900?exterior" data-lightbox="gallery" class="block">
                    <img src="https://source.unsplash.com/random/400x300?exterior" alt="Exterior project" class="w-full h-auto rounded shadow-lg transition-transform transform hover:scale-105">
                </a>
            </div>
        </div>
    </section>

    <!-- Customer Testimonials -->
    <section class="testimonials p-8 bg-gray-200 relative">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-3xl font-bold mb-6 text-white">Customer Testimonials</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <blockquote class="p-6 bg-white shadow-lg rounded-lg text-black transition-transform transform hover:scale-105">
                    <p class="text-lg italic">"Lopez Professional Services transformed our home! Their attention to detail is unmatched."</p>
                    <cite class="block mt-4 text-right text-lg font-semibold">— Happy Customer</cite>
                </blockquote>
                <blockquote class="p-6 bg-white shadow-lg rounded-lg text-black transition-transform transform hover:scale-105">
                    <p class="text-lg italic">"The team was professional, efficient, and delivered exactly what we wanted. Highly recommend!"</p>
                    <cite class="block mt-4 text-right text-lg font-semibold">— Satisfied Client</cite>
                </blockquote>
            </div>
        </div>
    </section>
    
    <style>
    .testimonials {
        position: relative;
    }
    
    .testimonials::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }
    
    blockquote {
        transition: transform 0.3s ease-in-out;
    }
    
    blockquote:hover {
        transform: scale(1.05);
    }
    </style>
    
</Layout>

<style>
html {
    scroll-behavior: smooth;
}

.gallery {
    position: relative;
}

.gallery::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

.gallery img {
    transition: transform 0.3s ease-in-out;
}

.gallery img:hover {
    transform: scale(1.05);
}
</style>

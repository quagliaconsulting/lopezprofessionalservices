---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Gallery - Lopez Professional Services">
    <!-- Gallery -->
    <section class="gallery p-8">
        <div class="container mx-auto">
            <h2 class="text-2xl mb-4">Project Photos</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <img src="https://source.unsplash.com/random/400x300?before" alt="Before project" class="w-full h-auto">
                <img src="https://source.unsplash.com/random/400x300?after" alt="After project" class="w-full h-auto">
                <img src="https://source.unsplash.com/random/400x300?transformation" alt="Transformation project" class="w-full h-auto">
                <img src="https://source.unsplash.com/random/400x300?house" alt="House project" class="w-full h-auto">
                <img src="https://source.unsplash.com/random/400x300?interior" alt="Interior project" class="w-full h-auto">
                <img src="https://source.unsplash.com/random/400x300?exterior" alt="Exterior project" class="w-full h-auto">
            </div>
        </div>
    </section>
</Layout>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Us - Lopez Professional Services">
    <!-- Company Story -->
    <section class="company-story p-8">
        <div class="container mx-auto">
            <h2 class="text-2xl mb-4">Our Story</h2>
            <p>Lopez Professional Services was founded by two cousins who shared a passion for quality craftsmanship and exceptional service. Our mission is to provide top-notch services that exceed our clients' expectations.</p>
        </div>
    </section>

    <!-- Customer Testimonials -->
    <section class="testimonials p-8 bg-gray-200">
        <div class="container mx-auto">
            <h2 class="text-2xl mb-4">Customer Testimonials</h2>
            <blockquote class="p-4 bg-white shadow-md mb-4">
                <p>"Lopez Professional Services transformed our home! Their attention to detail is unmatched."</p>
                <cite>— Happy Customer</cite>
            </blockquote>
            <blockquote class="p-4 bg-white shadow-md">
                <p>"The team was professional, efficient, and delivered exactly what we wanted. Highly recommend!"</p>
                <cite>— Satisfied Client</cite>
            </blockquote>
        </div>
    </section>
</Layout>

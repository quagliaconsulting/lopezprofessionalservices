---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog - Lopez Professional Services">
    <!-- Blog Content -->
    <section class="blog-content p-8 relative">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-3xl font-bold mb-6 text-white">Blog</h2>
            <article class="mb-8">
                <h3 class="text-xl mb-2 text-white">Home Improvement Tips</h3>
                <p class="text-white">Here are some home improvement tips to keep your home looking its best...</p>
                <a href="#" class="text-blue-500">Read more</a>
            </article>
            <article class="mb-8">
                <h3 class="text-xl mb-2 text-white">Latest Trends in Home Design</h3>
                <p class="text-white">Stay up-to-date with the latest trends in home design...</p>
                <a href="#" class="text-blue-500">Read more</a>
            </article>
            <article>
                <h3 class="text-xl mb-2 text-white">DIY Projects for Homeowners</h3>
                <p class="text-white">Explore these DIY projects that can enhance your living space...</p>
                <a href="#" class="text-blue-500">Read more</a>
            </article>
        </div>
    </section>

    <!-- Customer Testimonials -->
    <section class="testimonials p-8 bg-gray-200">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold mb-6">Customer Testimonials</h2>
            <blockquote class="p-6 bg-white shadow-md mb-6 rounded-md text-black">
                <p class="text-lg italic">"Lopez Professional Services transformed our home! Their attention to detail is unmatched."</p>
                <cite class="block mt-4 text-right text-lg font-semibold">— Happy Customer</cite>
            </blockquote>
            <blockquote class="p-6 bg-white shadow-md rounded-md text-black">
                <p class="text-lg italic">"The team was professional, efficient, and delivered exactly what we wanted. Highly recommend!"</p>
                <cite class="block mt-4 text-right text-lg font-semibold">— Satisfied Client</cite>
            </blockquote>
        </div>
    </section>
</Layout>

---
import Layout from '../layouts/Layout.astro';

const title = "Lopez Professional Services - Home";
const description = "Lopez Professional Services offers quality painting, remodeling, and more. Trusted craftsmanship you can rely on.";
---

<Layout title={title}>
    <head>
        <meta name="description" content={description} />
        <meta name="keywords" content="Painting, Remodeling, Home Improvement, Professional Services" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    </head>

    <!-- Hero Section -->
    <section class="hero bg-cover bg-center h-auto relative" style="background-image: url('https://source.unsplash.com/random/1600x900?house');">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto h-full flex flex-col justify-center items-center relative py-8">
            <h2 class="text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-center mb-8">
                <span>Quality</span><br />
                <span>Craftsmanship</span><br />
                <span>You Can Trust</span>
            </h2>
            <div class="text-white text-center max-w-2xl">
                <h2 class="text-2xl font-bold sm:text-3xl mb-4">Welcome to Lopez Professional Services</h2>
                <p>We offer a range of services including painting, remodeling, and more. Our team of professionals is dedicated to delivering top-notch craftsmanship and exceptional customer service.</p>
            </div>
        </div>
    </section>

    <!-- Introduction (Empty) -->
    <section class="intro p-8">
        <div class="container mx-auto">
            <!-- Placeholder for future content -->
        </div>
    </section>

    <!-- Services Overview -->
    <section class="services p-8 bg-gray-200 relative">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-2xl font-bold sm:text-3xl mb-4 text-white">Our Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="/services" class="service-card p-4 bg-white shadow-md hover:shadow-lg transition-shadow">
                    <h3 class="text-xl font-bold sm:text-2xl mb-2 text-black">Painting</h3>
                    <p class="text-black">High-quality interior and exterior painting services.</p>
                </a>
                <a href="/services" class="service-card p-4 bg-white shadow-md hover:shadow-lg transition-shadow">
                    <h3 class="text-xl font-bold sm:text-2xl mb-2 text-black">Remodeling</h3>
                    <p class="text-black">Expert remodeling services to transform your space.</p>
                </a>
                <a href="/services" class="service-card p-4 bg-white shadow-md hover:shadow-lg transition-shadow">
                    <h3 class="text-xl font-bold sm:text-2xl mb-2 text-black">More Services</h3>
                    <p class="text-black">Explore our full range of professional services.</p>
                </a>
            </div>
        </div>
    </section>
</Layout>

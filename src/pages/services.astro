---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Services - Lopez Professional Services">
    <!-- Services -->
    <section class="services p-8 relative" style="background-image: url('https://source.unsplash.com/random/1600x900?services'); background-size: cover; background-position: center;">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-3xl font-bold mb-6 text-white">Our Services</h2>
            <div class="service-details mb-8">
                <h3 class="text-xl mb-2 text-white font-bold">Painting</h3> <!-- Added font-bold class -->
                <p class="text-lg text-white">We provide high-quality interior and exterior painting services. Our team uses premium materials and techniques to ensure a flawless finish.</p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <img src="https://source.unsplash.com/random/400x300?home+office" alt="Completed painting project" class="w-full h-auto rounded shadow-lg">
                    <img src="https://source.unsplash.com/random/400x300?home" alt="Interior painting example" class="w-full h-auto rounded shadow-lg">
                </div>
            </div>
            <div class="service-details mb-8">
                <h3 class="text-xl mb-2 text-white font-bold">Remodeling</h3> <!-- Added font-bold class -->
                <p class="text-lg text-white">Our remodeling services are designed to transform your space. Whether you're looking to update a single room or your entire home, we can help.</p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <img src="https://source.unsplash.com/random/400x300?remodel" alt="Remodeling project" class="w-full h-auto rounded shadow-lg">
                    <img src="https://source.unsplash.com/random/400x300?kitchen" alt="Kitchen remodel example" class="w-full h-auto rounded shadow-lg">
                </div>
            </div>
        </div>
    </section>

    <!-- Customer Testimonials -->
    <section class="testimonials p-8 bg-gray-200 relative">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div> <!-- Add overlay for better text contrast -->
        <div class="container mx-auto relative z-10">
            <h2 class="text-3xl font-bold mb-6 text-white">Customer Testimonials</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <blockquote class="p-6 bg-white shadow-lg rounded-lg text-black transition-transform transform hover:scale-105">
                    <p class="text-lg italic">"Lopez Professional Services transformed our home! Their attention to detail is unmatched."</p>
                    <cite class="block mt-4 text-right text-lg font-semibold">— Happy Customer</cite>
                </blockquote>
                <blockquote class="p-6 bg-white shadow-lg rounded-lg text-black transition-transform transform hover:scale-105">
                    <p class="text-lg italic">"The team was professional, efficient, and delivered exactly what we wanted. Highly recommend!"</p>
                    <cite class="block mt-4 text-right text-lg font-semibold">— Satisfied Client</cite>
                </blockquote>
            </div>
        </div>
    </section>

    <style>
    .testimonials {
        position: relative;
    }
    
    .testimonials::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }
    
    blockquote {
        transition: transform 0.3s ease-in-out;
    }
    
    blockquote:hover {
        transform: scale(1.05);
    }
    </style>

</Layout>

<style>
html {
    scroll-behavior: smooth;
}

.services {
    position: relative;
}

.services::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

.service-details img {
    transition: transform 0.3s ease-in-out;
}

.service-details img:hover {
    transform: scale(1.05);
}
</style>

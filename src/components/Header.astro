---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'About Us', href: '/about' },
    { linkText: 'Services', href: '/services' },
    { linkText: 'Gallery', href: '/gallery' },
    { linkText: 'Contact Us', href: '/contact' },
    { linkText: 'Blog', href: '/blog' }
];
---

<nav class="bg-blue-900 text-white p-4">
    <div class="container mx-auto flex items-center gap-4">
        <a href="/" class="flex items-center">
            <Logo />
            <span class="ml-2 text-2xl font-bold tracking-tight">Lopez Professional Services</span>
        </a>
        <ul class="flex flex-wrap gap-4 ml-auto">
            {navItems.map((item) => (
                <li>
                    <a href={item.href} class="px-3 py-2 underline transition hover:opacity-80" aria-current={item.linkText === 'Home' ? 'page' : undefined}>
                        {item.linkText}
                    </a>
                </li>
            ))}
        </ul>
    </div>
</nav>

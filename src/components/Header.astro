---
// Header.astro
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'About Us', href: '/about' },
    { linkText: 'Services', href: '/services' },
    { linkText: 'Gallery', href: '/gallery' },
    { linkText: 'Contact Us', href: '/contact' },
    { linkText: 'Blog', href: '/blog' }
];
---

<nav class="bg-[#003b6f] bg-opacity-75 text-white p-4 w-full"> <!-- Updated background color -->
    <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="flex items-center">
            <Logo />
            <div class="ml-2 text-2xl font-bold tracking-tight text-left">
                <span class="block">Lopez</span>
                <span class="block">Professional</span>
                <span class="block">Services</span>
            </div>
        </a>
        <ul class="flex space-x-8 ml-4"> <!-- Increased spacing and moved to the left -->
            {navItems.map((item) => (
                <li>
                    <a href={item.href} class="px-4 py-2 text-2xl font-bold underline transition hover:opacity-80"> <!-- Updated padding, font size, and font weight -->
                        {item.linkText}
                    </a>
                </li>
            ))}
        </ul>
    </div>
</nav>
